{
  "consumer": {
    "name": "Bikes UI"
  },
  "provider": {
    "name": "Bikes GraphQL Query"
  },
  "interactions": [
    {
      "description": "a request for bikes",
      "providerState": "a bike exists",
      "request": {
        "method": "post",
        "path": "/graphql",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "query": "{\n  bikes{\n    id\n  }\n}\n",
          "variables": null
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": {
          "data": {
            "bikes": [
              {
                "id": "1"
              }
            ]
          }
        },
        "matchingRules": {
          "$.body.data.bikes[0].id": {
            "match": "type"
          }
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}